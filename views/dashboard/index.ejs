  <h4>Toko Pangan Harian</h4>
  <p>Di buat pada tanggal 29 September 2023</p>
</div>
<div class="row">
  <div class="box product">
    <h4 class="title">Total Product</h4>
    <p class="value"><%= productLength %></p>
  </div>

  <div class="box users">
    <h4 class="title">Total User</h4>
    <p class="value"><%= userLength %></p>
  </div>
