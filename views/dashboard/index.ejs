      <table>
        <thead>
          <th>Foto</th>
          <th>Nama Produk</th>
          <th>Jenis</th>
        </thead>
        <tbody>
          <% products.forEach(p =>{ %>
          <tr>
            <td>
              <img src="/img/<%= p.image %>" alt="" class="thumb" />
            </td>
            <td><%= p.nama %></td>
            <td><%= p.jenis %></td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="recent-order">
